def add_cat(title, description, picture, author):
    c = Post.objects.get_or_create(title=title)[0]
    c.description = description
    c.picture = picture
    c.author = author
    c.save()
    return c

def add_post(cat, title, picture, description, author) :
    p = Post.objects.get_or_create(category=cat, title=title)[0]
    p.picture = picture
    p.description = description
    p.author = author
    p.title = title
    p.save()
    return p

for cat, cat_data in cats.items():
        c = add_cat(cat, cat_data["posts"], cat_data["image"], cat_data["author"])
        for p in cat_data["posts"]:
            add_post(c, p["title"], p["picture"], p["description"], p["author"])


if __name__ == '__main__':
    print("Starting SnoutPage population script...")
    populate()